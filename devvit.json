{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "dealers-game",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "media": {},
  "menu": {
    "items": [
      {
        "label": "Create a new post",
        "description": "dealers-game",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "dev": {
    "subreddit": "dealers_game_dev"
  },
  "permissions": {
    "redis": true
  },
  "scheduler": {
    "tasks": {
      "regular-interval-example-task": {
        "endpoint": "/internal/scheduler/next-move",
        "cron": "*/1 * * * *"
      }
    }
  },
  "settings": {
    "global": {
      "seed":{
        "type": "string",
        "label": "seed",
        "defaultValue": "seed",
        "isSecret": true
      }
    }
  }
}